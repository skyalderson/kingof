{% extends 'base.html.twig' %}

{% block title %}{{ game.name }}{% endblock %}

{% block body %}

    <!-- Modal -->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="nope" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div id="modal_msg" class="modal-body goodgirl">
            </div>
            <div class="modal-footer">
                <button id="btn-modal" type="button" class="btn btn-secondary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>
<div id="data" data-thisplayer="{{ this_player }}" style="display:none;"></div>

<div  class="jumbotron bg-purple-light goodgirl text-yellow mr-3 ml-3 mb-0 pt-3 pb-3 mt-2">


        <div class="row" >

            <div class="col-sm-12 col-md-12 col-lg-8 col-xl-4">
                <div class="row" >
                    {% for player in players_by_order %}

                        <div class="col-6 col-sm-4 col-md-4 col-lg-2 col-xl-4 pl-1 pr-1 m-0">

                            <div class="card p-1 {% if player.isplaying == true %}bg-dark{% else %}bg-purple{% endif %}">
                                <div class="card-header text-center  pt-0 pl-0 pr-0 pb-1">
                                    <p class="m-0" >{{ player.user.username }}</p>
                                </div>
                                <img class="card-img img-fluid bg-purple-light" src="/img/monsters/to-right/{{ player.monster.imgname}}" alt="{{ player.monster.name}}" {% if player.incity != 0 %} style="filter:grayscale(100%) sepia(50%) opacity(75%) brightness(150%);"{% endif %}>
                                <div class="card-body p-0">
                                    <h5 class="card-title text-center "></h5>
                                    <div class="row text-center m-0">
                                        <div class="col-1 p-0">
                                            <img src="/img/symbols/heart.png" style="max-height:20px;"></img>
                                        </div>
                                        <div class="col-11 text-center pr-1 mt-1">
                                            <div class="progress" style="width:{% if player.hpmax == 12 %}100{% else %}83.333{% endif %}%;">
                                                <div class="progress-bar bg-danger" role="progressbar" style="width:{{ 100 * player.hp / player.hpmax }}%" aria-valuenow="{{ player.hp }}" aria-valuemin="0" aria-valuemax="{{ player.hpmax }}">{{ player.hp }}</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row text-center m-0">
                                        <div class="col-1 p-0">
                                            <img src="/img/symbols/star.png" style="max-height:20px;" ></img>
                                        </div>
                                        <div class="col-11 text-center pr-1 mt-1">
                                            <div class="progress"  style="width:83.333%;">
                                                <div class="progress-bar bg-primary" role="progressbar" style="width: {{ 100 * player.gp / 20 }}%" aria-valuenow="{{ player.gp }}" aria-valuemin="0" aria-valuemax="20">{{ player.gp }} </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row m-0">
                                        <div class="col-1 p-0">
                                            <img src="/img/symbols/flash.png" style="max-height:20px;" ></img>
                                        </div>
                                        <div class="col-4 p-0 pl-2 text-center">
                                            <span class="">{{ player.nbmana }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <h2>
                                    <span class="badge bg-purple text-yellow"></span>
                                </h2>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>


            <div class="col-12 col-sm-12 col-md-12 col-lg-4 col-xl-4">
                <div class="row">
                    <div class="col-12 col-sm-10 col-md-10 col-lg-12 col-xl-12 p-0" >
                        <img class="img-fluid" src="/img/board.png" alt="Card image">
                        <div id="inTokyo1" class="card-img-overlay">
                            {% for player in players_by_order %}
                                {% if player.incity == 1 %}<img class="img-fluid" src="/img/monsters/in-tokyo-1/{{ player.monster.imgname }}"/>{% endif %}
                            {% endfor %}
                        </div>
                        <div id="inTokyo2" class="card-img-overlay">
                            {% for player in players_by_order %}
                            {% if player.incity == 2 %}<img class="img-fluid" src="/img/monsters/in-tokyo-2/{{ player.monster.imgname }}"/><{% endif %}
                        {% endfor %}
                        </div>
                    </div>
                    <div class="col-12 col-sm-2 col-md-2 col-lg-12 col-xl-12" >
                        <div class="row">
                            <div class="col-3 col-sm-12 col-md-12 col-lg-3 col-xl-3 p-1">
                                <img class="img-fluid mb-md-1" src="/img/cards/card.png"/>
                            </div>
                            <div class="col-3 col-sm-12 col-md-12 col-lg-3 col-xl-3  p-1">
                                <img class="img-fluid mb-md-1" src="/img/cards/card.png"/>
                            </div>
                            <div class="col-3 col-sm-12 col-md-12 col-lg-3 col-xl-3  p-1">
                                <img class="img-fluid mb-md-1" src="/img/cards/card.png"/>
                            </div>
                            <div class="col-3 col-sm-12 col-md-12 col-lg-3 col-xl-3  p-1">
                                <img class="img-fluid mb-md-1" src="/img/cards/card.png"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
